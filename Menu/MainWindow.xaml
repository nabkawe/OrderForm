<Window x:Class="Menu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Menu"
        mc:Ignorable="d"
Title="MainWindow" Height="1920" Width="1080"   WindowStartupLocation="Manual" Loaded="Window_Loaded" WindowStyle="None"  ShowInTaskbar="False" Topmost="True" Closing="Window_Closing">
    <!--WindowStyle="None"-->

    <Grid>



        <Grid.RowDefinitions>
            <RowDefinition x:Name="Top_Row"  Height="0.86*"/>
            <RowDefinition x:Name="Bot_Row" Height="9*"/>
        </Grid.RowDefinitions>

        <local:InformationPanel x:Name="InfoPanels"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="1080" Grid.Row="0"/>

        <ItemsControl Grid.Row="1" x:Name="FoodList">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Name="MyList"  Margin="35,0,0,0" Opacity="1"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>

    </Grid>
</Window>
