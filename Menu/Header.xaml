<UserControl x:Class="OrderForm.Header"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OrderForm"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="217" Width="100" Height="100" Margin="0,5,0,0" Background="Transparent"  >
    <UserControl.LayoutTransform>
        <TransformGroup>
            <ScaleTransform/>
            <SkewTransform/>
            <RotateTransform Angle="-90"/>
            <TranslateTransform/>
        </TransformGroup>
    </UserControl.LayoutTransform>


    <Grid>

        <Border x:Name="HeaderBack"  CornerRadius="20,20,0,0" BorderBrush="Transparent" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="#FF5A9AE0">
            <TextBlock x:Name="HeaderText" Text="فطائر شامية" FontSize="30" Foreground="White" FontFamily="Segoui"  Margin="0,12,0,0"  FontWeight="ExtraBold" Width="200" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        </Border>

    </Grid>

</UserControl>
